Marksdata.php
<?PHP
$name = $_POST['name'];
$sp= $_POST['sp'];
$hp = $_POST['hp'];
$up = $_POST['up'];
$dbhandle = mysqli_connect('localhost','root','','Marksdb') or die ("unable to connect to 
mysql!!!");
$sql="INSERT into Marks(name,sp,hp,up) VALUES ('$name','$sp','$hp','$up')";
$query = mysqli_query($dbhandle,$sql);
$res = "select * from Marks";
$result= mysqli_query($dbhandle,$res);
while ($rs = mysqli_fetch_array($result))
{
echo"<b>First name :".$rs[0]."<br>";
echo"<b>SSLC Percentage:".$rs[1]."<br>";
echo"<b>HSC Percentage:".$rs[2]."<br>";
echo"<b>UG Percentage:".$rs[3]."<br>";
}
$query = mysqli_query($dbhandle,$sql);
mysqli_close($dbhandle);
?>
