medicinefront.php
<?PHP
$id = $_POST['id'];
$name = $_POST['name'];
$price = $_POST['price'];
$dbhandle = mysqli_connect('localhost','root','','medicinedata') or die ("unable toconnect to 
mysql!!!");
//$dbsel = mysqli_select_db("medicinedata",$dbhandle) or die ("unable to connectto 
database!!!");
$sql="INSERT into product (id,name,price) VALUES ('$id','$name','$price')";
$query = mysqli_query($dbhandle,$sql);
$res = "select * from product";
$result= mysqli_query($dbhandle,$res);
while ($rs = mysqli_fetch_array($result))
{
echo"<b>ID :".$rs[0]."<br>";
echo"<b>Name :".$rs[1]."<br>";
echo"<b>Price:".$rs[2]."<br>";
echo"~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~<br><br>";
}
$query = mysqli_query($dbhandle,$sql);
mysqli_close($dbhandle);
?>
